# Database
DATABASE_URL="postgresql://username:password@localhost:5432/chst_chatbot"

# NextAuth
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Pinecone
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"
PINECONE_INDEX_NAME="chst-documents"

# File Upload
UPLOAD_DIR="./documents"
MAX_FILE_SIZE="10485760"

# Chairperson Signup Code (Initial)
INITIAL_CHAIRPERSON_CODE="CHST-ADMIN-2025"

# RAG Cache Configuration (Optional)
# System Prompt Cache TTL in milliseconds (default: 600000 = 10 minutes)
SYSTEM_PROMPT_CACHE_TTL=600000

# Tool Permissions Cache TTL in milliseconds (default: 300000 = 5 minutes)
TOOL_PERMISSIONS_CACHE_TTL=300000

# Demo Mode - Set to 'true' for longer cache during presentations (30 minutes)
# Useful for demos where you want snappy responses without cache expiry
DEMO_MODE=false

# Related Documents Suggestions - Set to 'true' to enable AI-powered document suggestions
# Disabled by default for performance (saves ~2 seconds per query)
# Enable for demos or when "You might also need" suggestions are desired
ENABLE_RELATED_DOCS=false

# Supabase Storage (for file uploads)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
